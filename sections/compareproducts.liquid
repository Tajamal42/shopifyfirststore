<div class="header--middle-left header--mobile-center page-width">

<style>
  .wrapper {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    column-gap: 10px;
    row-gap: 1em;
  }
</style>

  <div class="wrapper">
    <div>
      <table>
        <tr>
          <td>
            <table>
              <tr>
              <td><h2>Product Image</h2></td>
              </tr>
              <tr>
                <td><h2>Title</h2></td>
              </tr>
              <tr>
                <td></td>
              </tr>
              <tr>
                <td>
                  <h2>Price</h2>
                </td>
              </tr>
              <tr>
                <td><h2>Pod Compability</h2></td>
              </tr>
              <tr>
                <td><h2>My K-Cup Capability</h2></td>
              </tr>
              <tr>
                <td><h2>Brew Size</h2></td>
              </tr>
              <tr>
                <td><h2>Water Capability</h2></td>
              </tr>
              <tr>
                <td><h2>Delivery Time:</h2></td>
              <tr>
            </table>
          </td>
        </tr>
        <tr>
      <td>
    </div>
    {% for product in collections.all.products %}
    <div>
      <table>
        <tr>
          <td><img src="{{ product.featured_image | img_url: '300x300' }}" alt="{{product.featured_image.alt}}" /></td>
        </tr>
        <tr>
          <td><h2>{{ product.title }}</h2></td>
        </tr>
        <tr>
          <td>
            <form action="/cart/add" method="post" enctype="multipart/form-data">
            <select name="id">
            {% for variant in product.variants %}
            {% if variant.available == true %}
            <option value="{{variant.id}}"> {{ variant.title }} for {{ variant.price | money_with_currency }}</option>
            {% else %}
            <option disabled="disabled"> {{ variant.title }} - sold out!</option>
            {% endif %}
            {% endfor %}
            </select>
            <input type="submit" name="add" id="add" value="Add to Cart" class="button">
            </form>
          </td>
        </tr>
        <tr>
          <td>
            <span aria-hidden="true">â€”</span>
            {%- if product.price_varies -%}
              <span class="visuallyhidden">Starting at</span>
              {{ product.price_min | money_without_trailing_zeros }}
              <span aria-hidden="true">+</span>
            {%- else -%}
              {{ product.price | money_without_trailing_zeros }}
            {%- endif -%}
          </td>
        </tr>
        <tr>
          <td>Pod Compability</td>
        </tr>
        <tr>
          <td>My K-Cup Capability</td>
        </tr>
        <tr>
          <td>Brew Size</td>
        </tr>
        <tr>
          <td>Water Capability</td>
        </tr>
        <tr>
          <td>Delivery Time: {{ product.metafields.custom.delivery_time }}</td>
        <tr>
      </table>
    </div>
    {% endfor %}
  </div>
          </td>
        </tr>
      </table>
    
  
</div>


{% schema %}
{
  "name": "compare products",
  "settings": []
}
{% endschema %}